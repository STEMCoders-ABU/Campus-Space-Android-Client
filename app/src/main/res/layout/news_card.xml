<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardBackgroundColor="@color/White"
    app:cardCornerRadius="4dp"
    app:cardElevation="16dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/news_card_img"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/news_bg" />

        <TextView
            android:id="@+id/news_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_black"
            android:ellipsize="end"
            android:padding="15dp"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:autoSizeTextType="none" />

        <TextView
            android:id="@+id/news_card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_black"
            android:padding="10dp"
            android:text="0n 2020-02-05 9:45:01"
            android:textAlignment="viewEnd"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/news_card_content"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:ellipsize="end"
            android:padding="10dp"
            android:text="This is a description to be filled automatically!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:autoSizeTextType="none" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/view_news"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>